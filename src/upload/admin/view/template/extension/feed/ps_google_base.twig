{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
				<div class="input-group">
					<div class="input-group-addon">
						{{ entry_active_store }}
						<select name="store" id="input-store" class="form-select">
							{% for store in stores %}&nbsp;&nbsp;
							<option value="{{ store.href }}" {% if store.store_id == store_id %} selected{% endif %}>{{ store.name }}</option>
							{% endfor %}
						</select>
					</div>
					<button type="button" id="button-import" data-toggle="tooltip" title="{{ button_import }}" class="btn btn-success"><i class="fa fa fa-upload"></i></button>
					<button type="submit" form="form-feed" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
					<a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
				</div>
			</div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
		<div class="alert alert-info"><i class="fa fa-info-circle"></i> {{ text_import }}
			<button type="button" class="close" data-dismiss="alert">Ã—</button>
		</div>
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-feed" class="form-horizontal">

					<ul class="nav nav-tabs">
						<li class="active"><a href="#tab-general" data-toggle="tab">{{ tab_general }}</a></li>
						<li><a href="#tab-support" data-toggle="tab">{{ tab_help_and_support }}</a></li>
					</ul>

					<div class="tab-content">
						<div class="tab-pane active" id="tab-general">

							<fieldset>
								<legend>{{ heading_categories }}</legend>

								<div id="category"></div>

								<div class="form-group">
									<label for="input-google-category" class="col-sm-2 control-label">{{ entry_google_category }}</label>
									<div class="col-sm-10">
										<input type="text" name="google_base_category" value="" placeholder="{{ entry_google_category }}" id="input-google-category" class="form-control">
										<input type="hidden" name="google_base_category_id" value="">
										<div class="input-group">
											<input type="text" name="category" value="" placeholder="{{ entry_category }}" id="input-category" class="form-control">
											<input type="hidden" name="category_id" value="">
											<span class="input-group-btn"><button type="button" id="button-category-add" data-toggle="tooltip" title="{{ button_category_add }}" class="btn btn-primary"><i class="fa fa-plus"></i></button></span>
										</div>
									</div>
								</div>

							</fieldset>

							<div class="form-group">
								<label for="input-skip-out-of-stock" class="col-sm-2 control-label">{{ entry_skip_out_of_stock }}</label>
								<div class="col-sm-10">
									<select name="feed_ps_google_base_skip_out_of_stock" id="input-skip-out-of-stock" class="form-control">
										{% if feed_ps_google_base_skip_out_of_stock %}
										<option value="1" selected="selected">{{ text_enabled }}</option>
										<option value="0">{{ text_disabled }}</option>
										{% else %}
										<option value="1">{{ text_enabled }}</option>
										<option value="0" selected="selected">{{ text_disabled }}</option>
										{% endif %}
									</select>
								</div>
							</div>

							<div class="form-group">
								<label for="input-tax-status" class="col-sm-2 control-label">{{ entry_tax }}</label>
								<div class="col-sm-10">
									<select name="feed_ps_google_base_tax" id="input-tax-status" class="form-control">
										{% if feed_ps_google_base_tax %}
										<option value="1" selected="selected">{{ text_enabled }}</option>
										<option value="0">{{ text_disabled }}</option>
										{% else %}
										<option value="1">{{ text_enabled }}</option>
										<option value="0" selected="selected">{{ text_disabled }}</option>
										{% endif %}
									</select>
								</div>
							</div>

							<fieldset id="tax-group"{% if not feed_ps_google_base_tax %} style="display: none;" {% endif %}>
								<legend>{{ heading_tax_deffinitions }}</legend>
								<table id="tax-table" class="table table-striped table-bordered table-hover">
									<thead>
										<tr>
											<td class="text-left">{{ entry_country }}</td>
											<td class="text-left">{{ entry_region }}</td>
											<td class="text-left">{{ entry_tax_rate }}</td>
											<td class="text-left">{{ entry_tax_ship }}</td>
											<td></td>
										</tr>
									</thead>
									<tbody>
										{% for tax in feed_ps_google_base_taxes %}
										<tr id="tax-row-{{ loop.index0 }}">
											<td class="text-left" style="position: relative;">
												<input type="text" name="feed_ps_google_base_taxes[{{ loop.index0 }}][country]" value="{{ tax.country }}" placeholder="{{ entry_country }}" id="input-tax-country-{{ loop.index0 }}" class="form-control" autocomplete="off">
												<input type="hidden" name="feed_ps_google_base_taxes[{{ loop.index0 }}][country_id]" value="{{ tax.country_id }}" id="input-tax-country-id-{{ loop.index0 }}">
												{% if error_input_tax_country[loop.index0] %}<div class="text-danger">{{ error_input_tax_country[loop.index0] }}</div>{% endif %}
											</td>
											<td class="text-left">
												<input type="text" name="feed_ps_google_base_taxes[{{ loop.index0 }}][region]" value="{{ tax.region }}" placeholder="{{ entry_region }}" id="input-tax-region-{{ loop.index0 }}" class="form-control">
												{% if error_input_tax_region[loop.index0] %}<div class="text-danger">{{ error_input_tax_region[loop.index0] }}</div>{% endif %}
											</td>
											<td class="text-left">
												<select name="feed_ps_google_base_taxes[{{ loop.index0 }}][tax_rate_id]" id="input-tax-rate-id-{{ loop.index0 }}" class="form-control">
													<option value="">{{ text_select }}</option>
													{% for tax_rate in tax_rates %}
														{% if tax_rate.tax_rate_id == tax.tax_rate_id %}
															<option value="{{ tax_rate.tax_rate_id }}" selected="selected">{{ tax_rate.name }}</option>
														{% else %}
															<option value="{{ tax_rate.tax_rate_id }}">{{ tax_rate.name }}</option>
														{% endif %}
													{% endfor %}
												</select>
												{% if error_input_tax_rate_id[loop.index0] %}<div class="text-danger">{{ error_input_tax_rate_id[loop.index0] }}</div>{% endif %}
											</td>
											<td class="text-left">
												<select name="feed_ps_google_base_taxes[{{ loop.index0 }}][tax_ship]" id="input-tax-ship-{{ loop.index0 }}" class="form-control">
													{% if tax.tax_ship %}
													<option value="1" selected="selected">{{ text_enabled }}</option>
													<option value="0">{{ text_disabled }}</option>
													{% else %}
													<option value="1">{{ text_enabled }}</option>
													<option value="0" selected="selected">{{ text_disabled }}</option>
													{% endif %}
												</select>
											</td>
											<td class="text-right"><button type="button" onclick="$('#tax-row-{{ loop.index0 }}').remove()" data-toggle="tooltip" title="{{ button_remove }}" class="btn btn-danger"><i class="fa fa-minus-circle"></i></button></td>
										</tr>
										{% endfor %}
									</tbody>
									<tfoot>
										<tr>
											<td colspan="6" class="text-right"><button type="button" id="button-tax" data-toggle="tooltip" title="{{ button_add }}" class="btn btn-primary"><i class="fa fa-plus-circle"></i></button></td>
										</tr>
									</tfoot>
								</table>

							</fieldset>

							<fieldset class="border p-3 mb-3">
								<legend>{{ heading_authentication }}</legend>

								<div class="form-group">
									<label for="input-login" class="col-sm-2 control-label">{{ entry_login }}</label>
									<div class="col-sm-10">
										<input type="text" name="feed_ps_google_base_login" value="{{ feed_ps_google_base_login }}" placeholder="{{ entry_login }}" id="input-login" class="form-control">
									</div>
								</div>

								<div class="form-group">
									<label for="input-password" class="col-sm-2 control-label">{{ entry_password }}</label>
									<div class="col-sm-10">
										<input type="text" name="feed_ps_google_base_password" value="{{ feed_ps_google_base_password }}" placeholder="{{ entry_password }}" id="input-password" class="form-control">
									</div>
								</div>

							</fieldset>

							<hr>

							<div class="form-group">
								<label class="col-sm-2 control-label">{{ entry_data_feed_url }}</label>
								<div class="col-sm-10">
									{% for language in languages %}
									<div class="input-group">
										<span class="input-group-addon"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}"></span>
										<input type="text" name="data_feed_{{ language.language_id }}" value="{{ data_feed_urls[language.language_id] }}" id="input-data-feed-{{ language.language_id }}" class="form-control" readonly>
										<span class="input-group-btn">
											<button type="button" class="btn btn-success btn-copy" data-toggle="tooltip" data-input-id="input-data-feed-{{ language.language_id }}" title="{{ help_copy }}"><i class="fa fa-copy"></i></button>
										</span>
									</div>
									{% endfor %}
								</div>
							</div>

							<div class="form-group">
								<label for="input-status" class="col-sm-2 control-label">{{ entry_status }}</label>
								<div class="col-sm-10">
									<select name="feed_ps_google_base_status" id="input-status" class="form-control">
										{% if feed_ps_google_base_status %}
										<option value="1" selected="selected">{{ text_enabled }}</option>
										<option value="0">{{ text_disabled }}</option>
										{% else %}
										<option value="1">{{ text_enabled }}</option>
										<option value="0" selected="selected">{{ text_disabled }}</option>
										{% endif %}
									</select>
								</div>
							</div>

						</div>
						<div class="tab-pane" id="tab-support">

							<h3>{{ heading_getting_started }}</h3>
							{{ text_getting_started }}
							<hr>
							<h3>{{ heading_setup }}</h3>
							{{ text_setup }}
							<hr>
							<h3>{{ heading_troubleshot }}</h3>
							{{ text_troubleshot }}
							<hr>
							<h3>{{ heading_faq }}</h3>
							{{ text_faq }}
							<hr>
							<h3>{{ heading_contact }}</h3>
							{{ text_contact }}

						</div>

					</div>

					<input type="hidden" name="store_id" value="{{ store_id }}">
        </form>

      </div>
    </div>
  </div>
  <script>
		$('#input-store').on('change', function () {
			window.location = $(this).val();
		});

		$('#input-tax-status').on('change', function () {
			var taxGroup = $('#tax-group');

			if ($(this).prop('selectedIndex')) {
				taxGroup.fadeOut();
			} else {
				taxGroup.fadeIn();
			}
		});

		function attachCountryAutocomplete(obj) {
			var $this = obj;
			var $this_id = obj.next('input[id^="input-tax-country-id"]');

			obj.autocomplete({
				'source': function(request, response) {
					$.ajax({
						url: 'index.php?route=extension/feed/ps_google_base/countryautocomplete&user_token={{ user_token }}&filter_name=' +  encodeURIComponent(request),
						dataType: 'json',
						success: function(json) {
							response($.map(json, function(item) {
								return {
									label: item['name'],
									value: item['iso_code_2']
								}
							}));
						},
						error: function(xhr, ajaxOptions, thrownError) {
							alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
						}
					});
				},
				'select': function(item) {
					$this.val(item['label']);
					$this_id.val(item['value']);
				}
			});
		}

		{% for tax in feed_ps_google_base_taxes %}
			attachCountryAutocomplete($('#input-tax-country-{{ loop.index0 }}'));
		{% endfor %}

		var tax_row = {{ feed_ps_google_base_taxes|length }};

		$('#button-tax').on('click', function () {
			var html = '<tr id="tax-row-' + tax_row + '">';
			html += '	<td class="text-left" style="position: relative;">';
			html += '		<input type="text" name="feed_ps_google_base_taxes[' + tax_row + '][country]" value="" placeholder="{{ entry_country }}" id="input-tax-country-' + tax_row + '" class="form-control" autocomplete="off">';
			html += '		<input type="hidden" name="feed_ps_google_base_taxes[' + tax_row + '][country_id]" value="" id="input-tax-country-id-' + tax_row + '">';
			html += '	</td>';
			html += '	<td class="text-left">';
			html += '		<input type="text" name="feed_ps_google_base_taxes[' + tax_row + '][region]" value="" placeholder="{{ entry_region }}" id="input-tax-region-' + tax_row + '" class="form-control">';
			html += '	</td>';
			html += '	<td class="text-left">';
			html += '		<select name="feed_ps_google_base_taxes[' + tax_row + '][tax_rate_id]" id="input-tax-rate-id-' + tax_row + '" class="form-control">';
			html += '			<option value="">{{ text_select }}</option>';
			html += '			{% for tax_rate in tax_rates %}';
			html += '				<option value="{{ tax_rate.tax_rate_id }}">{{ tax_rate.name }}</option>';
			html += '			{% endfor %}';
			html += '		</select>';
			html += '	</td>';
			html += '	<td class="text-left">';
			html += '		<select name="feed_ps_google_base_taxes[' + tax_row + '][tax_ship]" id="input-tax-ship-' + tax_row + '" class="form-control">';
			html += '			<option value="1">{{ text_enabled }}</option>';
			html += '			<option value="0" selected="selected">{{ text_disabled }}</option>';
			html += '		</select>';
			html += '	</td>';
			html += '	<td class="text-right"><button type="button" onclick="$(\'#tax-row-' + tax_row + '\').remove()" data-toggle="tooltip" title="{{ button_remove }}" class="btn btn-danger"><i class="fa fa-minus-circle"></i></button></td>';
			html += '</tr>';

			$('#tax-table tbody').append(html);

			attachCountryAutocomplete($('#input-tax-country-' + tax_row));

			tax_row++;
		});

    $('.btn-copy').on('click', function () {
			var copyText = $("#" + $(this).data('inputId'));

			if (copyText.length) {
					copyText.select();
					copyText[0].setSelectionRange(0, 99999);
					document.execCommand("copy");
			}
		});

		// Google Category
		$('input[name=\'google_base_category\']').autocomplete({
				'source': function(request, response) {
					$.ajax({
						url: 'index.php?route=extension/feed/ps_google_base/autocomplete&user_token={{ user_token }}&filter_name=' +  encodeURIComponent(request),
						dataType: 'json',
						success: function(json) {
							response($.map(json, function(item) {
								return {
									label: item['name'],
									value: item['google_base_category_id']
								}
							}));
						},
						error: function(xhr, ajaxOptions, thrownError) {
							alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
						}
					});
				},
				'select': function(item) {
					$(this).val(item['label']);
					$('input[name=\'google_base_category_id\']').val(item['value']);
			}
		});

		// Category
		$('input[name=\'category\']').autocomplete({
			'source': function(request, response) {
				$.ajax({
					url: 'index.php?route=catalog/category/autocomplete&user_token={{ user_token }}&filter_name=' +  encodeURIComponent(request),
					dataType: 'json',
					success: function(json) {
						response($.map(json, function(item) {
							return {
								label: item['name'],
								value: item['category_id']
							}
						}));
					},
					error: function(xhr, ajaxOptions, thrownError) {
						alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
					}
				});
			},
			'select': function(item) {
					$(this).val(item['label']);
					$('input[name="category_id"]').val(item['value']);
				}
		});

		$('#category').delegate('.pagination a', 'click', function(e) {
			e.preventDefault();

			$('#category').load(this.href);
		});

		$('#category').load('index.php?route=extension/feed/ps_google_base/category&store_id={{ store_id }}&user_token={{ user_token }}');

		$('#button-category-add').on('click', function() {
			$.ajax({
				url: 'index.php?route=extension/feed/ps_google_base/addcategory&user_token={{ user_token }}',
				type: 'post',
				dataType: 'json',
				data: 'store_id=' + $('input[name=\'store_id\']').val() + '&google_base_category_id=' + $('input[name=\'google_base_category_id\']').val() + '&category_id=' + $('input[name=\'category_id\']').val(),
				beforeSend: function() {
					$('#button-category-add').button('loading');
				},
				complete: function() {
					$('#button-category-add').button('reset');
				},
				success: function(json) {
					$('.alert-dismissible').remove();

					if (json['error']) {
						$('#content > .container-fluid').prepend('<div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> ' + json['error'] + ' <button type="button" class="close" data-dismiss="alert">&times;</button></div>');
					}

					if (json['success']) {
						$('#content > .container-fluid').prepend('<div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> ' + json['success'] + ' <button type="button" class="close" data-dismiss="alert">&times;</button></div>');

						$('input[name=\'category\']').val('');
						$('input[name=\'category_id\']').val('');
						$('input[name=\'google_base_category\']').val('');
						$('input[name=\'google_base_category_id\']').val('');

						$('#category').load('index.php?route=extension/feed/ps_google_base/category&store_id={{ store_id }}&user_token={{ user_token }}');
					}
				},
				error: function(xhr, ajaxOptions, thrownError) {
					alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
				}
			});
		});

		$('#category').delegate('.btn-danger', 'click', function() {
			var node = this;

			$.ajax({
				url: 'index.php?route=extension/feed/ps_google_base/removecategory&user_token={{ user_token }}',
				type: 'post',
				data: 'store_id=' + $('input[name=\'store_id\']').val() + '&category_id=' + encodeURIComponent(this.value),
				dataType: 'json',
				crossDomain: true,
				beforeSend: function() {
					$(node).button('loading');
				},
				complete: function() {
					$(node).button('reset');
				},
				success: function(json) {
					$('.alert-dismissible').remove();

					// Check for errors
					if (json['error']) {
						$('#content > .container-fluid').prepend('<div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> ' + json['error'] + ' <button type="button" class="close" data-dismiss="alert">&times;</button></div>');
					}

					if (json['success']) {
						$('#content > .container-fluid').prepend('<div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> ' + json['success'] + ' <button type="button" class="close" data-dismiss="alert">&times;</button></div>');

						$('#category').load('index.php?route=extension/feed/ps_google_base/category&user_token={{ user_token }}');
					}
				},
				error: function(xhr, ajaxOptions, thrownError) {
					alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
				}
			});
		});

		$('#button-import').on('click', function() {
			$('#form-upload').remove();

			$('body').prepend('<form enctype="multipart/form-data" id="form-upload" style="display: none;"><input type="file" name="file"></form>');

			$('#form-upload input[name=\'file\']').trigger('click');

			if (typeof timer != 'undefined') {
				clearInterval(timer);
			}

			timer = setInterval(function() {
				if ($('#form-upload input[name=\'file\']').val() != '') {
					clearInterval(timer);

					$.ajax({
						url: 'index.php?route=extension/feed/ps_google_base/import&user_token={{ user_token }}',
						type: 'post',
						dataType: 'json',
						data: new FormData($('#form-upload')[0]),
						cache: false,
						contentType: false,
						processData: false,
						beforeSend: function() {
							$('#button-import').button('loading');
						},
						complete: function() {
							$('#button-import').button('reset');
						},
						success: function(json) {
							$('.alert-dismissible').remove();

							if (json['error']) {
								$('#content > .container-fluid').prepend('<div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> ' + json['error'] + ' <button type="button" class="close" data-dismiss="alert">&times;</button></div>');
							}

							if (json['success']) {
								$('#content > .container-fluid').prepend('<div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> ' + json['success'] + ' <button type="button" class="close" data-dismiss="alert">&times;</button></div>');
							}
						},
						error: function(xhr, ajaxOptions, thrownError) {
							alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
						}
					});
				}
			}, 500);
		});
</script>
</div>
{{ footer }}
